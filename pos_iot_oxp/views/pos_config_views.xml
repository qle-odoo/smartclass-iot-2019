<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_iot_config_view_form_keyboard" model="ir.ui.view">
        <field name="name">pos.iot.config.form.view.keyboard</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('pos_iot_config')]" position="inside">
                <div class="content-group pos_iot_config" attrs="{'invisible' : [('is_posbox', '=', False)]}">
                    <div class="row">
                        <label string="Keyboard" for="iot_keyboard_id" class="col-lg-4 o_light_label"/>
                        <field name="iot_keyboard_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
