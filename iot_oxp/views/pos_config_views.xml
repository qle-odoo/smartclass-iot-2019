<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
        </xpath>
    </template>

    <record id="oxp_pos_iot_config_view_form" model="ir.ui.view">
        <field name="name">oxp.pos.iot.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="pos_iot.pos_iot_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('pos_iot_config')]/div[1]" position="before">
                <div class="row">
                    <label string="Keyboard" for="iface_keyboard_id" class="col-lg-4 o_light_label"/>
                    <field name="iface_keyboard_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
